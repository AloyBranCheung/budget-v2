{
  "name": "budget-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "docker compose -f docker-compose.yml up -d --build && next dev",
    "dev:next": "next dev",
    "dc:db": "docker compose up local-db test-db -d --build",
    "dc:stop": "docker compose -f docker-compose.yml down",
    "migrate:data:create": "dotenv -e .env.local -- ./scripts/create_static_data_migration.sh",
    "migrate:data": "dotenv -e .env.local -- ./scripts/migrate.sh",
    "migrate:dev": "dotenv -e .env.local -- yarn prisma migrate dev",
    "migrate:reset": "dotenv -e .env.local -- yarn prisma migrate reset && yarn migrate:data",
    "psql:local": "psql -U local -h localhost -p 5432 local",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:unit": "vitest",
    "test:int": "bash ./scripts/test_integration.sh",
    "test:e2e": "bash ./scripts/test_e2e.sh",
    "test:debug": "dotenv -e .env.test -- npx playwright test --project=chromium --debug"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "axios": "^1.6.8",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.10",
    "framer-motion": "^11.1.7",
    "next": "14.2.2",
    "next-auth": "^4.24.7",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "react": "^18",
    "react-countup": "^6.5.3",
    "react-dom": "^18",
    "recharts": "^2.12.6",
    "tailwind-merge": "^2.3.0",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@playwright/test": "^1.43.1",
    "@testing-library/react": "^15.0.5",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.2",
    "jsdom": "^24.0.0",
    "postcss": "^8",
    "prisma": "^5.13.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.2",
    "typescript": "^5",
    "typescript-eslint": "^7.7.1",
    "vitest": "^1.5.2",
    "vitest-mock-extended": "^1.3.1"
  }
}
