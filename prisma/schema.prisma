// config 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// enums
enum TransactionType {
  Income
  Expense
}

// models
model Images {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  bytes     Bytes

  // relationships
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?   @unique
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // auth0 stuff 
  name      String
  email     String   @unique
  auth0Id   String   @unique
  image     String

  // relationships
  transactions Transaction[]
  tags         Tag[]
  paychecks    Paycheck[]
  categories   Category[]
}

model Paycheck {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  amount    Int

  // relationships
  User         User          @relation(fields: [userId], references: [id])
  userId       String
  transactions Transaction[]
}

model Transaction {
  id        String          @id @default(uuid())
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  name      String
  type      TransactionType
  amount    Int
  date      DateTime
  notes     String?

  // relationships
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  tags       Tag[]
  paycheck   Paycheck @relation(fields: [paycheckId], references: [id], onDelete: Cascade)
  paycheckId String
  Category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
}

model Category {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  name            String
  percentageSplit Decimal
  description     String?

  // relationships
  transactions Transaction[]
  User         User?         @relation(fields: [userId], references: [id])
  userId       String?
  image        Images?
}

model Tag {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?

  // relationships
  transactions Transaction[]
  User         User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String?
}
