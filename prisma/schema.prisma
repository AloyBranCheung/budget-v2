// config 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enums
enum TransactionType {
  Income
  Expense
}

// models
model Images {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  bytes     Bytes
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // auth0 stuff 
  name      String
  email     String
  image     String
}

model Transaction {
  id         String          @id @default(uuid())
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  type       TransactionType
  amount     Int
  date       DateTime
  notes      String?
  categories Category[] // implicit m2m relationship
}

model Category {
  id           String        @id @default(uuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         String
  transactions Transaction[] // implicit m2m relationship
}
