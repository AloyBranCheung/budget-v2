// config 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enums
enum TransactionType {
  Income
  Expense
}

// models
model Images {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  bytes     Bytes
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // auth0 stuff 
  name      String
  email     String
  auth0Id   String
  image     String

  // relationships
  transactions Transaction[]
  tags         Tag[]
}

model Transaction {
  id        String          @id @default(uuid())
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  type      TransactionType
  amount    Int
  date      DateTime
  notes     String?

  // relationships
  categories Category[] // implicit m2m relationship
  user       User       @relation(fields: [userId], references: [id])
  userId     String
  tags       Tag[]
}

model Category {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?

  // relationships
  transactions Transaction[] // implicit m2m relationship
}

model Tag {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?

  transactions Transaction[]
  User         User?         @relation(fields: [userId], references: [id])
  userId       String?
}
